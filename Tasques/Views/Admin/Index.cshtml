@model IEnumerable<Tasques.Models.TASKS>

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Creació de tasques</h2>
    <p>
        @Html.ActionLink("Nova Tasca", "Create", "TASKS", null, new { @class = "btn btn-primary btn-large" })
        @*@Html.ActionLink("Nova Tasca", "Create")*@
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NAME)
            </th>
            @*<th>

                @Html.DisplayNameFor(model => model.Tasques)
            </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NAME)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Tasques)
                </td>*@
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IDTASK }, new { @class = "btn btn-primary btn-large" })
                    @*@Html.ActionLink("Details", "Details", new { id = item.IDTASK }) |*@
                    @Html.ActionLink("Borrar", "Delete", new { id = item.IDTASK }, new { @class = "btn btn-danger btn-large" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
