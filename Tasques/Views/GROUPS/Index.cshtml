@model IEnumerable<Tasques.Models.GROUPS>

@{
    ViewBag.Title = "ADMINISTRACIÓ DE GRUPS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ADMINISTRACIÓ DE GRUPS</h2>

<p>
    @Html.ActionLink("Nou grup", "Create", "GROUPS", null, new { @class = "btn btn-primary btn-large" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GROUPNAME)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GROUPNAME)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDGROUP }, new { @class = "btn btn-primary btn-large" }) 
            @*@Html.ActionLink("Details", "Details", new { id=item.IDGROUP }) |*@
            @Html.ActionLink("Borrar", "Delete", new { id=item.IDGROUP }, new { @class = "btn btn-danger btn-large" })
        </td>
    </tr>
}

</table>
